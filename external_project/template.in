cmake_minimum_required(VERSION 2.8.2)
project(${EXTERN_PROJ_NAME}-project NONE)

include(ExternalProject)
ExternalProject_Add(${EXTERN_PROJ_NAME}
  GIT_REPOSITORY "${EXTERN_PROJ_REPO}"
  GIT_TAG        "${EXTERN_PROJ_TAG}"
  CMAKE_ARGS     ${EXTERN_PROJ_CL_ARGS} -DCMAKE_INSTALL_PREFIX=${EXTERN_PROJ_DIR} ${EXTERN_PROJ_ARGS}
  BUILD_COMMAND  ${EXTERN_PROJ_BUILD_CMD}
  INSTALL_COMMAND ${EXTERN_PROJ_INSTALL_CMD}
)
